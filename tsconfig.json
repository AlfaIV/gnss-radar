{
  "compilerOptions": {
    "target": "esnext", // Целевой стандарт JavaScript
    "module": "esnext", // Модульная система
    "jsx": "react-jsx", // Укажите 'react' для более ранних версий
    "types": ["plotly.js"],
    "esModuleInterop": true, // Включение поддержки esModuleInterop
    "allowSyntheticDefaultImports": true, // Включение поддержки allowSyntheticDefaultImports
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@views/*": ["views/*"],
      "@assets/*": ["assets/*"],
      "@icons/*": ["assets/icons/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
